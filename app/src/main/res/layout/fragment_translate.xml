<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/trans">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include
            layout="@layout/choose_lang"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D3D3D3"/>
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:elevation="4dp">
            <EditText
                android:id="@+id/editTextTrans"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:lines="5"
                android:hint="@string/tip_translate"
                android:inputType="textMultiLine"
                android:background="@android:color/transparent"
                android:gravity="top"
                android:textColor="@color/mainText"
                android:scrollbars="vertical"
                android:textSize="@dimen/text_size"
                style="@style/Widget.AppCompat.EditText"
                android:layout_margin="@dimen/standart_padd"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/clearButton" />

            <ImageButton
                android:id="@+id/clearButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_clear"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="@string/descrip_clear_button"
                android:padding="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="12dp" />
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/translateResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:elevation="4dp">

            <TextView
                android:id="@+id/translatedText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textSize="@dimen/text_size"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:gravity="top"
                android:text="@string/example_text"
                android:textColor="@color/mainText"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/speakButton"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/speakButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_speaker"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="@string/descrip_clear_button"
                android:padding="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textTranslate"
                android:layout_marginTop="0dp" />
            <ImageButton
                android:id="@+id/favButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_favicon"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="@string/descrip_clear_button"
                android:padding="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/speakButton"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="0dp" />
        </android.support.constraint.ConstraintLayout>

    </LinearLayout>
</ScrollView>